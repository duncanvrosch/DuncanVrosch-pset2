<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChooseStory">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:text="Choose your story!"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/simpleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="checkClicked"
        android:text="simple" />

    <Button
        android:id="@+id/tarzanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="checkClicked"
        android:text="tarzan" />

    <Button
        android:id="@+id/uniButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="checkClicked"
        android:text="university" />

    <Button
        android:id="@+id/clothesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="checkClicked"
        android:text="clothes" />

    <Button
        android:id="@+id/danceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="checkClicked"
        android:text="dance" />

    <Button
        android:id="@+id/familyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="checkClicked"
        android:text="family" />

</LinearLayout>